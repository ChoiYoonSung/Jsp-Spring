<sqlMap namespace="member">
	<!-- 로그인 시 아이디 체크 -->
	<select id="loginCheckId" parameterClass="String" resultClass="int">
		SELECT 	count(*) cnt
		FROM MEMBER_TEST
		WHERE MEM_ID = #memId#
	</select>
	
	<!-- 로그인 -->
	<select id="login" parameterClass="com.servlet.vo.MemberVO" resultClass="com.servlet.vo.MemberVO">
		select
			  MEM_ID	memId
			, MEM_PW	memPw
			, MEM_PH	memPh
			, MEM_MAIL	memMail
		from MEMBER_TEST
		where MEM_ID = #memId#
		and MEM_PW = #memPw#
	</select>
	
